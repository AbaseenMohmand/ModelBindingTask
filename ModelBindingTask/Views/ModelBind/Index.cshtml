@model IEnumerable<ModelBindingTask.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h4>Students List</h4>
<hr />
<div>
<h4 class="text-danger" >@TempData["Message"]</h4>


</div>
<table class="table table-hover">
    <thead>
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>         
            <th>
                <a asp-action="Upsert" class="btn btn-outline-success"><i class="far fa-plus-square"></i> AddNewStudent</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
          
         
            <td>
                <a asp-action="Upsert" asp-route-id="@item.Id"><i class="fa fa-marker fa-lg">Update</i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fa fa-trash-alt fa-lg"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


>


